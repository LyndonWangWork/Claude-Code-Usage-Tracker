{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Claude Code Usage Tracker",
  "version": "0.1.0",
  "identifier": "com.claude-code-usage-tracker.app",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:7153",
    "beforeDevCommand": "npm run dev --prefix web",
    "beforeBuildCommand": "npm run build --prefix web"
  },
  "app": {
    "windows": [
      {
        "title": "Claude Code Usage Tracker",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}